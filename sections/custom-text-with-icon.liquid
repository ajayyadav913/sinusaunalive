{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="section-one section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="inner-row">
      <div class="proactively-prevent">
        <div class="wellness__content">
          <h3 class="wellness__tagline">{{ section.settings.tagline }}</h3>
          <h4 class="wellness__title text-sef">{{ section.settings.title }}</h4>
          <a href="{{ section.settings.about_us_link }}" class="button green ss-img-with-text-btn button--secondary">{{ section.settings.about_us_text }}</a>
        </div>
      </div>
      <div class="wellness__list-section">
        <div class="natural-relief">
          {% for block in section.blocks %}
            {% if block.type == 'image_with_text' %}
              <div class="wellness__list-item-one">
                <span>
                  {% if block.settings.image %}
                    <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt | default: 'image_description' }}">
                  {% else %}
                    <img src="{{ 'img-1-3.png' | asset_url }}" alt="image_description">
                  {% endif %}
                </span>
                <h3>{{ block.settings.heading }}</h3>
                <p>{{ block.settings.text }}</p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Section Dynamic Items",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Proactively prevent congestion"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The first respiratory wellness solution using the power of heated dry air therapy"
    },
    {
      "type": "url",
      "id": "about_us_link",
      "label": "About Us Link"
    },
    {
      "type": "text",
      "id": "about_us_text",
      "label": "About Us Button Text",
      "default": "About Us"
    },
     {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.multirow.settings.container_color_scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image_with_text",
      "name": "List Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Natural congestion relief"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Uses heated air to keep nasal passages clear without medications"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section Dynamic Items",
      "category": "Homepage",
      "blocks": [
        {
          "type": "image_with_text"
        },
        {
          "type": "image_with_text"
        },
        {
          "type": "image_with_text"
        }
      ]
    }
  ]
}
{% endschema %}
<style>
  .inner-row {
  display: flex;
}
.proactively-prevent {
  flex: 1;
  display: flex;
  align-items: stretch;
}
.wellness__list-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1.25rem;
}
h4.wellness__title.text-sef {
  color: #434343;
}
</style>